<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= fullDate %></h1>
</div>

<div class="box" id="heading">
  <h1><%= listItem %></h1>
</div>
<div class="box">
  <% newItem.forEach((eachItem)=>{ %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= eachItem._id %>"
        onchange="this.form.submit()"
      />
      <p><%= eachItem.name %></p>
    </div>
  </form>
  <% }) %>
  <form class="item" action="/" method="post">
    <input
      type="text"
      name="item"
      placeholder="Enter the item name"
      autocomplete="off"
    />

    <button type="submit" value="<%= listItem %>" name="list">+</button>
  </form>
</div>

<%- include("footer") -%>
